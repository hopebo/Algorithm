class Solution {
public:
    /*
     * @param a: The first integer
     * @param b: The second integer
     * @return: The sum of a and b
     */
    int aplusb(int a, int b) {
        // write your code here, try to do it without arithmetic operators.
        int res = a ^ b, carry = (a & b) << 1;
        while (carry != 0) {
            int temp = res ^ carry;
            carry = (res & carry) << 1;
            res = temp;
        }
        return res;
    }
};
